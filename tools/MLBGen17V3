#MacBook Air...............................................................................
MBAir()
{ 
# EEEE Code......................................

declare -a code=('XSC3' 'YMSK' 'ZU52' 'ZU6L' 'ZU7G' 'ZU8R' 'Z80J' 'Z81V' 'ZU9N' 'ZUAK' 'ZUB6' 'ZUC2' 'DK9L' 'DLCP' 'DLCT' 'DLCR' 'DLD1' 'DLD6' 'DCWV' 'DCWX' 'DCX4' 'DCXF')
