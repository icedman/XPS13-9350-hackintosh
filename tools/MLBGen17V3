EEEE=${code[index]}
#echo $EEEE

# TTT Code (Board Serial)..................................
declare -a codee=('200' '600' '403' '404' '405' '303' '108' '207' '609' '501' '306' '102' '701' '301' '501' '101' '300' '130' '100' '270' '310' '902' '104' '401' '902' '500' '700' '802')
